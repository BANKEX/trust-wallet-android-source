<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bankex.pay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:name, android:theme, android:allowBackup">
        <activity android:name=".ui.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WalletsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_account_list" />
        <activity
            android:name=".ui.ImportWalletActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_import"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".ui.TransactionsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_import" />
        <activity
            android:name=".ui.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ui.TransactionDetailActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_transaction_details" />
        <activity
            android:name=".ui.MyAddressActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_my_address" />
        <activity
            android:name=".ui.TokensActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_my_tokens" />
        <activity
            android:name=".ui.SendActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_send" />
        <activity
            android:name=".ui.ConfirmationActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_confirmation" />
        <activity
            android:name=".ui.AddTokenActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_add_token" />
        <activity
            android:name=".ui.barcode.BarcodeCaptureActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_barcode" />
        <activity
            android:name=".ui.GasSettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_send_settings" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5b2cfd1743e96d92261c59fb94482a93c8ec4e13" />

        <activity
            android:name=".ui.OnBoardingActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_on_boarding"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.CreateWalletActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_craeate_wallet"
            android:parentActivityName=".ui.WalletsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.WalletCreatedActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_wallet_created"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>