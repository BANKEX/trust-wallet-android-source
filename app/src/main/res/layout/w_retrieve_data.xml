<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="240dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/onboarding120_margin"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ic_retrive_data" />

    <TextView
        style="@style/retrieving_"
        android:id="@+id/titleOnboarding"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/retrieving_" />

    <TextView
        style="@style/the_operati"
        android:id="@+id/descOnboarding"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/the_operati" />
</LinearLayout>