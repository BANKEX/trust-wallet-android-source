<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fr_create_wallet">

    <include layout="@layout/w_top_navigation" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            style="@style/create_wallet_input_style"
            android:id="@+id/name"
            android:hint="@string/name_your_wallet" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/password_layout_style"
        android:id="@+id/passwordBox"
        app:passwordToggleDrawable="@drawable/ic_eye2"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/black">

        <android.support.design.widget.TextInputEditText
            style="@style/create_wallet_input_style"
            android:id="@+id/password"
            android:hint="@string/enter_passw"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/confirmPasswordBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleDrawable="@drawable/ic_eye2"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/black">

        <android.support.design.widget.TextInputEditText
            style="@style/create_wallet_input_style"
            android:id="@+id/confirmPassword"
            android:hint="@string/repeat_pass"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>